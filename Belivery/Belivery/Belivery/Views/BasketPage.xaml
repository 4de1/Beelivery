<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Belivery.Views.BasketPage"
             Title="Корзина" >
    <Shell.TitleView>
        <Image Source="logoM.png"/>
    </Shell.TitleView>
    <ContentPage.Content>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                
                <Label Text="Список пуст" FontSize="16" Padding="0,0,0,0"/>

                <Button Margin="0,10,0,0" Text="Оформить заказ" 
                        VerticalOptions="Center"
                        CornerRadius="10"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="Black" BorderWidth="2" BorderColor="#F4E9E9" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>